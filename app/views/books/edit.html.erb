<div class="content-edit">
  <h1>Editing Book</h1>
  	<%= form_for(@book) do |f| %>
  	  <p class="content-edit-box">
  	    <h4>Title</h4>
  	    <%= f.text_field :title %>
  	  </p>
  	  <p class="content-edit-box">
  	  <h4>Body</h4>
  	  <%= f.text_area :body %>
  	  </p>
  	  <p class="content-edit-box">
  	  <%= f.submit 'Update Book' %>
  	  </p>
  	<% end %>
  <p>
  	<%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %>
  	|
  	<%= link_to "Back", books_path, class: "back" %>
  </p>
</div>