<div class="content">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <p class="content-box-show">
  	<strong>Title:</strong> <%= @book.title %></p>
  <p class="content-box-show"><strong>Body:</strong> <%= @book.body %></p>
  <p class="menu">
    <%= link_to "Edit", edit_book_path(@book.id), class: "edit_#{@book.id}" %>
     |
    <%= link_to "Back", books_path, class: "back" %>
  </p>
</div>